@model WebSemantica.Models.Pelicula

@{
    ViewData["Title"] = "DetallePeli";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h4>Pelicula</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 mt-4">
            Imagen
        </dt>
        <dd class="col-sm-10 mt-4">
            <img src="@Model.UrlImagen" style="height:30rem; width:25rem; object-fit: contain;"></img>
        </dd>
        <dt class = "col-sm-2 mt-4">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10 mt-4">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2 mt-4">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class="col-sm-10 mt-4">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class="col-sm-2 mt-4">
            @Html.DisplayNameFor(model => model.Presupuesto)
        </dt>
        <dd class="col-sm-10 mt-4">
            @Html.DisplayFor(model => model.Presupuesto)
        </dd>
        <dt class="col-sm-2 mt-4">
            @Html.DisplayNameFor(model => model.Recaudacion)
        </dt>
        <dd class="col-sm-10 mt-4">
            @Html.DisplayFor(model => model.Recaudacion)
        </dd>
        <dt class="col-sm-2 mt-4">
            @Html.DisplayNameFor(model => model.Pais)
        </dt>
        <dd class="col-sm-10 mt-4">
            @Html.DisplayFor(model => model.Pais)
        </dd>
        <dt class="col-sm-2 mt-4">
            @Html.DisplayNameFor(model => model.Puntuacion) 
        </dt>
        <dd class="col-sm-10 mt-4">
            @Html.DisplayFor(model => model.Puntuacion) ⭐
        </dd>
        <dt class="col-sm-2 mt-4">
            @Html.DisplayNameFor(model => model.actores)
        </dt>
        <dd class="col-sm-10 mt-4">
            @foreach (Actor ac in Model.actores)
            {
                <p>🔹@ac.Nombre</p>
            }
        </dd>
        <dt class="col-sm-2 mt-4">
            @Html.DisplayNameFor(model => model.extra)
        </dt>
        <dd class="col-sm-10 mt-4">
            @foreach (Extra ex in Model.extra)
            {
                <p>🔹@ex.Nombre</p>
            }
        </dd>
        <dt class="col-sm-2 mt-4">
            @Html.DisplayNameFor(model => model.generos)
        </dt>
        <dd class="col-sm-10 mt-4">
            @foreach (Genero ge in Model.generos)
            {
                <p>🔹@ge.Nombre</p>
            }
        </dd>
        <dt class="col-sm-2 mt-4">
            @Html.DisplayNameFor(model => model.productora)
        </dt>
        <dd class="col-sm-10 mt-4">
            <p>🔹@Model.productora.Nombre</p>
        </dd>
        <dt class="col-sm-2 mt-4">
            Director
        </dt>
        <dd class="col-sm-10 mt-4">
            @foreach (Director di in Model.directors)
            {
                <p>🔹@di.Nombre</p>
            }
        </dd>
    </dl>
</div>
<div class="mb-5">
   <button class="btn btn-outline-danger"><a href="@Url.Action("CatalogoPeli","Pelicula")" style="text-decoration: none; color:azure;">Volver</a></button>
</div>
