<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebSemantica</title>
    <link rel="shortcut icon" href="~/Img/uniamazonia.png" type="image/x-icon">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand">Web Semantica</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("CatalogoPeli","Pelicula")">Catalogo</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Puntuacion", "Pelicula")">Puntuacion </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Genero", "Pelicula")">Genero </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Actores", "Pelicula")">Actores </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Productora", "Pelicula")">Productora </a>
                        </li>
                        @*<li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Insertar
                        </a>
                        <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="@Url.Action("FormularioPelicula","Insertar")">Peliculas</a></li>
                        <li><a class="dropdown-item" href="#">Actor</a></li>
                        </ul>
                        </li>*@
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer fixed-bottom">
        <div class="container">
            &copy; 2023 - WebSemantica
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
